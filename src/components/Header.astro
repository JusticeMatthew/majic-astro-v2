---
import ScrollLink from './ScrollLink';
import navLinks from '@/constants/navLinks';
import MobileNav from './MobileNav';
---

<header class="z-50 sticky top-0 text-dark flex items-center pt-xs -mb-sl">
  <div
    id="header"
    class="flex bg-light p-xs w-full items-center justify-between rounded-lg transition-colors duration-300"
  >
    <a href="/" class="flex gap-2xs cursor-pointer items-center">
      <img src="/images/logo-svg.svg" alt="" width={46} height={46} />
      <h1 class="text-logo astro-font-calistoga">
        <span class="majic">Majic&nbsp;</span>
        <span class="astro-font-inter text-bread">
          | Beautiful Web Solutions
        </span>
      </h1>
    </a>
    <MobileNav client:visible />
    <nav class="hidden sm:flex gap-2xs">
      {
        navLinks.map((link) => (
          <ScrollLink to={link[0]} client:load>
            {link[1]}
          </ScrollLink>
        ))
      }
    </nav>
  </div>
</header>
