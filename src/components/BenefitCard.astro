---
import benefits from '@/constants/benefits.js';
---

<Fragment>
  {
    benefits.map(({ icon, alt, topText, bottomText, content }) => (
      <div class="p-large bg-light rounded-lg max-tablet:hidden h-auto shadow benefit-card relative">
        <div class="flex flex-col items-center h-full w-full">
          <img src={icon} alt={alt} height={128} width={null} />
          <p class="text-subTitle text-center font-cursive my-large">
            <span class="text-gradient">{topText}</span>
            <br />
            <span class="whitespace-nowrap">{bottomText}</span>
          </p>
          <p class="text-center">{content}</p>
        </div>
      </div>
    ))
  }
</Fragment>
