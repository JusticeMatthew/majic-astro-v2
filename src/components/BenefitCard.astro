---
import benefits from '@/constants/benefits.js';
---

<Fragment>
  {
    benefits.map(({ icon, alt, topText, bottomText, content }) => (
      <div class="p-14 bg-light rounded-lg max-tablet:hidden h-auto shadow gap-10 benefit-card relative">
        <div class="flex flex-col items-center h-full w-full">
          <img src={icon} alt={alt} class="mb-14" height={128} width={null} />
          <p class="text-5xl text-center text-text font-cursive">
            <span class="text-gradient">{topText}</span>
            <br />
            <span class="whitespace-nowrap">{bottomText}</span>
          </p>
          <p class="text-xl text-center mt-8">{content}</p>
        </div>
      </div>
    ))
  }
</Fragment>
