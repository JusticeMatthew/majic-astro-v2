---
import LottieContainer from '@/components/LottieContainer';
import Button from '@/components/Button.astro';
import benefits from '@/constants/benefits.js';
import workingV2 from '@/animations/workingV2.json';
---

<section
  id="about"
  class="relative flex items-center justify-center w-full min-h-screen md:min-h-[80vh]"
>
  <div class="grid justify-center w-full grid-cols-3 gap-4 md:gap-8">
    <div
      class="col-span-3 bg-light max-h-[40rem] rounded-2xl flex items-center justify-evenly shadow py-4 md:py-16"
    >
      <LottieContainer
        client:only="react"
        src={workingV2}
        className="max-w-[36rem] max-h-[36rem] hidden lg:inline p-4 mx-4 md:mx-16"
      />
      <div
        class="flex flex-col p-8 max-md:items-center max-lg:justify-center max-lg:text-center"
      >
        <p class="text-4xl md:text-6xl font-cursive w-[12ch] mb-8">
          Running your own business is
          <span class="text-gradient"> tough enough</span>
        </p>
        <p class="mb-8 md:mb-16 w-[25ch] sm:w-[30ch] md:w-[40ch] md:text-xl">
          Thats why Majic wants to provide a one stop shop for businesses who
          need worry-free web design & development services at a fair rate.
        </p>
        <div>
          <Button>See our affordable plans</Button>
        </div>
      </div>
    </div>
    {
      benefits.map((item) => (
        <div class="flex lg:flex-col max-lg:col-span-3 items-center justify-center p-14 bg-light rounded-2xl h-[24rem] lg:h-[40rem] shadow gap-10">
          <img
            src={item.icon}
            alt={item.alt}
            class="h-32 lg:mb-8 max-sm:hidden"
          />
          <div>
            <p class="text-5xl text-center text-text font-cursive">
              <span class="text-gradient">{item.topText}</span>
              <br />
              <span class="whitespace-nowrap">{item.bottomText}</span>
            </p>
            <p class="text-xl text-center mt-8">{item.content}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
