---
import Button from '@/components/Button.jsx';
import benefits from '@/constants/benefits.js';
import BenefitCard from '@/components/BenefitCard.astro';
import LottieAnimation from 'astro-integration-lottie/Lottie.astro';
---

<section
  id="about"
  class="relative my-3x flex min-h-screen w-full items-center justify-center text-dark md:min-h-[80vh]"
>
  <div class="grid w-full grid-cols-3 justify-center gap-medium">
    <div
      class="col-span-3 flex max-h-[40rem] items-center justify-evenly rounded-lg bg-light p-large shadow"
    >
      <div
        class="mr-medium hidden h-[36rem] w-[36rem] place-content-center tablet:inline"
      >
        <LottieAnimation src="animations/workingV2.json" autoplay="visible" />
      </div>
      <div
        class="flex flex-col max-tablet:justify-center max-tablet:text-center max-md:items-center"
      >
        <h3
          id="content-about"
          class="balanced mb-small max-w-[12ch] font-cursive text-title"
        >
          Running your own business is
          <span class="text-gradient"> tough enough</span>
        </h3>
        <p id="content-about" class="balanced my-small max-w-[40ch]">
          That&apos;s why Majic wants to provide a one-stop shop for businesses
          who need worry free web design & development services at a fair rate.
        </p>
        <div id="content-about">
          <Button
            client:visible
            aria="See our affordable pricing"
            margin="mt-sm max-w-min"
          >
            See our <span class="hidden sm:inline">affordable</span> pricing
          </Button>
        </div>
      </div>
    </div>
    <BenefitCard />
    {
      benefits.map(({ icon, alt, topText, bottomText, content }) => (
        <div class="col-span-3 flex h-auto flex-row items-center justify-center gap-10 rounded-lg bg-light p-14 shadow tablet:hidden">
          <img
            src={icon}
            alt={alt}
            height={32}
            width={null}
            class="max-sm:hidden tablet:mb-8"
          />
          <div>
            <p class="text-center font-cursive text-5xl">
              <span class="text-gradient">{topText}</span>
              <br />
              <span class="whitespace-nowrap">{bottomText}</span>
            </p>
            <p class="mt-8">{content}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
