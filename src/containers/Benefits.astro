---
import benefits from '@/constants/benefits';
---

<div class="z-20 grid w-full grid-cols-3 grid-rows-2">
  {
    benefits.map(({ maskId, title, content, top }) => (
      <div
        id={maskId}
        class="mask col-span-1 w-full bg-light-purple text-dark-purple"
      >
        <div class="relative mb-[6.5rem] mt-40">
          <span class="absolute h-[2.15rem] w-1 rounded-lg bg-blurple" />
          <div class="ml-6">
            <p class="font-small mb-3 text-subTitle font-semibold">{title}</p>
            <p class="balanced">{content}</p>
          </div>
        </div>
      </div>
    ))
  }
</div>
